<script>

let modo = "parceria";

const produtos = [
{nome:"FIVE", parceria:273.35, normal:303.75},
{nome:"G-36", parceria:405.00, normal:450.00},
{nome:"Uzi", parceria:266.60, normal:296.25},
{nome:"Doze", parceria:327.35, normal:363.75},
{nome:"GLOCK", parceria:226.10, normal:251.25},
{nome:"M-TAR", parceria:327.35, normal:363.75},
{nome:"Sniper", parceria:10767.00, normal:11963.00},
{nome:"Maconha", parceria:300.00, normal:350.00}
];

function setModo(novo){
    modo = novo;
    const status = document.getElementById("statusModo");

    if(modo === "parceria"){
        status.className = "status-modo parceria";
        status.innerText = "üü¢ MODO PARCERIA ATIVO";
    }else{
        status.className = "status-modo normal";
        status.innerText = "üî¥ MODO SEM PARCERIA";
    }

    render();
}

function render(){
    const container = document.getElementById("produtos");
    container.innerHTML = "";

    produtos.forEach((p,i)=>{
        container.innerHTML += `
        <div class="produto">
            <div>
                ${p.nome}<br>
                <span>${formatar(p[modo])}</span>
            </div>
            <input type="number" min="0" value="0" oninput="calcular()" id="q${i}">
        </div>
        `;
    });

    calcular();
}

function calcular(){
    let total = 0;
    produtos.forEach((p,i)=>{
        const qtd = parseInt(document.getElementById("q"+i)?.value)||0;
        total += qtd * p[modo];
    });

    document.getElementById("total").innerText = formatar(total);
    document.getElementById("vendedorValor").innerText = formatar(total*0.3);
    document.getElementById("empresaValor").innerText = formatar(total*0.7);
}

function formatar(v){
    return v.toLocaleString("pt-BR",{style:"currency",currency:"BRL"});
}

render();

</script>

